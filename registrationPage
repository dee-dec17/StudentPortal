    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        String id,name,pwd,mks,ph,addr,city;
        id = jTextField1.getText();
        name = jTextField2.getText();
        pwd = jPasswordField1.getText();
        mks = jTextField5.getText();
        ph = jTextField6.getText();
        addr = jTextField7.getText();
        city = jTextField8.getText();
        try {
            Class.forName("oracle.jdbc.driver.OracleDriver");
            Connection con = DriverManager.getConnection("jdbc:oracle:thin:@localhost:1521:xe","deekshitha","smiley");
            PreparedStatement ps=con.prepareStatement("insert into student values(?,?,?,?,?,?,?)");
            ps.setString(1, id);
            ps.setString(2, name);
            ps.setString(3, pwd);
            ps.setString(4, mks);
            ps.setString(5, ph);
            ps.setString(6, addr);
            ps.setString(7, city);
            int i =ps.executeUpdate();
            if(i>0) {
                JOptionPane.showMessageDialog(null, "New user created !!");
            }
        }
        catch(Exception e) {
            System.out.println(e);
        }
    }                                        

